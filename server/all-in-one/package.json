{
  "name": "all-in-one-microservices",
  "version": "1.0.0",
  "engines": {
    "node": ">=10.0.0"
  },
  "name": "micro_multi_services",
  "version": "0.0.1",
  "description": "versatile microservices written with NODE.JS ",
  "main": "index.js",
  "scripts": {
    "test": "npm run test",
    "start:dev": "NODE_ENV=development nodemon --exec babel-node src/index.js",
    "start:devback": "NODE_ENV=development nodemon -r env/index.js --exec babel-node src/index.js",
    "build": "babel src --ignore '__tests__' --out-dir dist",
    "serve": "node dist/server.js",
    "serve:prod": "NODE_ENV=production node -r env/index.js --production dist/server.js",
    "install:server:koa": "npm install koa @koa/cors@2",
    "install:cache": "npm install redis",
    "install:utils": "npm install bcryptjs dotenv jsonwebtoken lodash moment nodemon validator",
    "install:db": "npm install mongodb pg",
    "install:graphql": "npm install apollo-server-koa merge-graphql-schemas graphql graphql-iso-date graphql-tools graphql-type-json",
    "install:gateway": "npm install nats kafka",
    "install:test": "npm install --save-dev mocha chai supertest pupetteer",
    "install:lint": "npm install --save-dev eslint eslint-config-airbnb-base eslint-plugin-import lint-staged husky prettier ",
    "install:babel": "npm install --save-dev @babel/preset-typescript @babel/plugin-proposal-class-properties @babel/plugin-proposal-object-rest-spread @babel/core @babel/cli @babel/preset-env @babel/node"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ddkino/mmss.git"
  },
  "keywords": [
    "nodejs",
    "message",
    "queueing",
    "nats",
    "http2"
  ],
  "author": "DD",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ddkino/mmss/issues"
  },
  "homepage": "https://github.com/ddkino/mmss#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.1.2",
    "lint-staged": "^8.0.4",
    "nodemon": "^1.18.5",
    "prettier": "^1.14.3"
  },
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "hapi": "^17.6.0",
    "jsonwebtoken": "^8.3.0",
    "kafka": "^0.2.3",
    "koa": "^2.6.1",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "nats": "^1.0.1",
    "redis": "^2.8.0",
    "validator": "^10.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
